<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Définir le format de sortie des journaux sur la console -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Définir le niveau de sortie des journaux -->
    <root level="info">
        <appender-ref ref="console" />
    </root>

    <!-- Définir le niveau de journalisation pour une classe ou un paquet spécifique -->
    <logger name="com.example" level="debug" />
</configuration>
